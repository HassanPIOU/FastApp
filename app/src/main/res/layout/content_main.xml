<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".activities.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_person"
            android:tint="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/space10"
            android:id="@+id/userinfo"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/dialogtoggle"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Definir un point de livraison"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/space20"
                android:id="@+id/defin"
                android:textSize="16dp"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_drop_down"
                android:tint="@color/white"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/defin"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_share"
            android:tint="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/space10"
            android:layout_alignParentRight="true"
            android:id="@+id/share"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Comencer en dÃ©finissant votre une adresse de livraison"
        android:gravity="center"
        android:layout_marginTop="@dimen/space20"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:textColor="@color/white"
        android:layout_above="@id/emplacement"
        />


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/locate"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:id="@+id/emplacement"
        />

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="@drawable/halfcircle"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:id="@+id/halfcircle"
        android:layout_marginBottom="-250dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Commandes"
            android:layout_marginTop="@dimen/space20"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
</RelativeLayout>