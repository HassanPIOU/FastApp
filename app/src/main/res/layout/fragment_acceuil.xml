<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".activities.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:id="@+id/searchbox"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/space20"
            android:layout_marginRight="@dimen/space20"
             android:background="@drawable/edittextround"
             android:layout_marginTop="@dimen/space20"
            android:hint="De quoi avez-vous besoin ?"
             android:paddingLeft="@dimen/space10"
            android:drawableLeft="@drawable/ic_search"
            android:drawableTint="@color/grey"
            android:drawablePadding="@dimen/space10"
            android:id="@+id/searchprodorlocate"
            />

    </RelativeLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_below="@+id/searchbox"
          />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchbox"
        android:id="@+id/service_recycler"
        android:layout_marginLeft="@dimen/space20"
        />
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="@drawable/halfcircle"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:id="@+id/halfcircle"
        android:layout_marginBottom="-250dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Commandes"
            android:layout_marginTop="@dimen/space20"
            />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
</RelativeLayout>