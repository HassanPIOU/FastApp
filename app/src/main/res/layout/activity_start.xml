<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activities.StartActivity">
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
         android:background="@drawable/halfcircle"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:id="@+id/halfcircle"
        android:layout_marginTop="-150dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
   <ImageView
       android:layout_width="170dp"
       android:layout_height="170dp"
        android:src="@drawable/logo"
      android:layout_marginTop="60dp"
       />
    </LinearLayout>

    <TextView
        android:layout_below="@+id/halfcircle"
        android:id="@+id/continuer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continuer avec"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/space20"
        android:layout_marginRight="@dimen/space20"
        android:textColor="@color/white"
        android:layout_marginTop="80dp"
        android:textStyle="bold"
        android:fontFamily="@font/righteous"
        />
    <androidx.cardview.widget.CardView
        android:layout_below="@id/continuer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:layout_above="@id/polik"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:cardCornerRadius="60dp"
        android:layout_marginBottom="40dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            >
          <com.facebook.login.widget.LoginButton
              android:id="@+id/login_facebook"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
               android:background="@drawable/buttonface"
            android:layout_marginLeft="@dimen/space20"
              android:text="Facebook"
              android:gravity="center"
              android:paddingTop="@dimen/space20"
              android:paddingBottom="@dimen/space20"
              android:paddingRight="40dp"
              android:paddingLeft="15dp"
              android:layout_marginRight="@dimen/space20"
              android:layout_marginTop="@dimen/space20"
              android:textColor="@color/white"
              android:fontFamily="@font/righteous"
              />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:text="S'INSCRIRE"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                android:fontFamily="@font/righteous"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/space20"
                android:id="@+id/registerpage"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_gravity="bottom"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Déjà,inscrit ?"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorAccent"
                    android:text="S'identifier"
                    android:id="@+id/loginpage"
                    android:layout_marginLeft="@dimen/space10"
                    />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/polik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/politique_conf"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/space20"
        android:layout_marginRight="@dimen/space20"
        android:textColor="@color/white"
        />
</RelativeLayout>