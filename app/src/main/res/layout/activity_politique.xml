<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.PolitiqueActivity">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="@drawable/halfcircle"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:id="@+id/halfcircle"
        android:layout_marginTop="-150dp"
        android:orientation="horizontal"
        >
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/halfcircle"
        android:id="@+id/head"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/halfcircle"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-60dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        >
        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/halfcircle"
            android:backgroundTint="@color/colorPrimary"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >
            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/halfcircle"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                >
                <RelativeLayout
                    android:layout_centerInParent="true"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                     android:backgroundTint="@color/colorPrimary"
                    android:background="@drawable/halfcircle"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    >

                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head"
       android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/condition"
            android:layout_marginLeft="@dimen/space20"
            android:layout_marginRight="@dimen/space20"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space10"
            android:textSize="@dimen/space20"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/condition_gene1"
            android:layout_marginLeft="@dimen/space20"
            android:layout_marginRight="@dimen/space20"
            android:gravity="center"
            android:layout_marginTop="@dimen/space10"
            android:textSize="15dp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/condition_gene2"
            android:layout_marginLeft="@dimen/space20"
            android:layout_marginRight="@dimen/space20"
            android:gravity="center"
            android:layout_marginTop="@dimen/space20"
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space20"
            android:layout_marginRight="@dimen/space20"
            android:background="@drawable/rounded_corner"
             android:text="ENREGISTRER ET CONTINUER"
             android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:padding="@dimen/space20"
            android:layout_marginTop="40dp"
            android:id="@+id/validate_politique"
            />
    </LinearLayout>


</RelativeLayout>